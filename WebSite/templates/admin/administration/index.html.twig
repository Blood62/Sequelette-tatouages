{% extends 'base.html.twig' %}

{% block title %}Terra-Incognita Administraion{% endblock %}

{% block body %}
<div  class="card bg-dark border border-primary mt-2  shadow rounded  ml-3 mr-3 text-white">
<div class="mx-auto text-white mb-3">
    <h1>Gestion du Site</h1>
</div>
    <div class="card  bg-dark p-3 ml-3 mr-3  mb-3   border border-secondary shadow-lg " >
        <div class="mx-auto  mb-3">
            <h1>Partie devis</h1>
        </div>
        <div class="row">

            <div class="card col-4 col-sm-4 bg-dark p-3  mx-auto mb-3   border border-secondary shadow" >
                <h3 class="mb-3">Pour la gestion des devis</h3>
                <a class="btn btn-outline-warning btn-lg btn-block mt-4" href="{{ path('devis_index') }}" role="button">Cliquez ici </a>

            </div>
            <div class="card col-4 col-sm-4 bg-dark p-3  mx-auto mb-3   border border-secondary shadow " >
                <h3 class="mb-3">Pour la modification du Tarif/h Hors Taxes pour les devis</h3>
                <a class="btn btn-outline-warning btn-lg btn-block" href="{{ path('tarif_horaire_edit', {'id': 1}) }}" role="button">Cliquez ici </a>

            </div>
        </div>
    </div>


    <div class="card  bg-dark p-3 ml-3 mr-3  mb-3   border border-secondary shadow-lg " >
        <div class="mx-auto  mb-3">
            <h1>Partie Galerie</h1>
        </div>
        <div class="row">
            <div class="card col-4 col-sm-4 bg-dark p-3  mx-auto mb-3   border border-secondary shadow " >
                <h3 class="mb-3">Accés à la galerie</h3>
                <a class="btn btn-outline-warning btn-lg btn-block" href="{{ path('galerie_index') }}" role="button">Cliquez ici </a>

            </div>
            <div class="card col-4 col-sm-4 bg-dark p-3  mx-auto mb-3   border border-secondary shadow" >
                <h3 class="mb-3">Enrichissement de la galerie</h3>
                <a class="btn btn-outline-warning btn-lg btn-block" href="{{ path('galerie_new') }}" role="button">Cliquez ici </a>

            </div>
        </div>
    </div>

    <div class="card  bg-dark p-3 ml-3 mr-3  mb-3   border border-secondary shadow-lg " >
        <div class="mx-auto  mb-3">
            <h1>Partie Team</h1>
        </div>
        <div class="row">

            <div class="card col-4 col-sm-4 bg-dark p-3  mx-auto mb-3   border border-secondary shadow" >
                <h3 class="mb-3">Visualiser la Team</h3>
                <a class="btn btn-outline-warning btn-lg btn-block" href="{{ path('team_index') }}" role="button">Cliquez ici </a>

            </div>
            <div class="card col-4 col-sm-4 bg-dark p-3  mx-auto mb-3   border border-secondary shadow " >
                <h3 class="mb-3">Ajouter une personne à la Team</h3>
                <a class="btn btn-outline-warning btn-lg btn-block" href="{{ path('team_new') }}" role="button">Cliquez ici </a>

            </div>
        </div>
    </div>

    <div class="card  bg-dark p-3 ml-3 mr-3  mb-3   border border-secondary shadow-lg " >
        <div class="mx-auto  mb-3">
            <h1>Acceuil</h1>
        </div>
        <div class="row">

            <div class="card col-4 col-sm-4 bg-dark p-3  mx-auto mb-3   border border-secondary shadow" >
                <h3 class="mb-3">Visualiser l'acceuil</h3>
                <a class="btn btn-outline-warning btn-lg btn-block" href="{{ path('home_index') }}" role="button">Cliquez ici </a>

            </div>

            <div class="card col-4 col-sm-4 bg-dark p-3  mx-auto mb-3   border border-secondary shadow" >
                <h3 class="mb-3">Gestion compte</h3>
                <a class="btn btn-outline-warning btn-lg btn-block" href="{{ path('UserIndex') }}" role="button">Cliquez ici </a>

            </div>
            <div class="card col-4 col-sm-4 bg-dark p-3  mx-auto mb-3   border border-secondary shadow " >
                <h3 class="mb-3">Modification du texte d'acceuil</h3>
                <a class="btn btn-outline-warning btn-lg btn-block" href="{{ path('home_edit', {'id': 1}) }}" role="button">Cliquez ici </a>

            </div>

        </div>
    </div>
</div>
{% endblock %}
