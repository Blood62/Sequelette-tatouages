{% extends 'base.html.twig' %}

{% block title %}Devis N°{{ devi.id }}{% endblock %}

{% block body %}
<div class="card bg-dark border border-primary mt-2  shadow rounded  ml-3 mr-3 text-white ">
    <div class="mx-auto bg-dark border border-secondary mt-3 mb-3 p-2 shadow-lg">
        <div class="card-body">
            <img id="card-img" src="{{ vich_uploader_asset(devi, 'imageFile') }}" class="card-img-top" alt="picture{{ devi.id }}">
            <h5 class="card-title  mt-3 "><h4><u>Contact:</u></h4> <span class="text-info">{{ devi.contact }}</span></h5>
            {% if devi.commentaire!=null %} <p class="card-text mt-2 "><h5><u>Commentaire:</u></h5> {{ devi.commentaire }}</p> {% endif %}

            <a class="btn btn-outline-primary btn-lg btn-block mt-3 " href="{{ path('devis_index') }}" role="button">Retour à la liste</a>
            {{ include('admin/devis/_delete_form.html.twig') }}
        </div>



</div>
</div>
{% endblock %}
