{% extends 'base.html.twig' %}

{% block title %}Terra Incognita-Connexion{% endblock %}

{% block body %}<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes déja connecter en tant que: {{ app.user.username }}
        </div>
    {% endif %}
    <div class="bg-dark border border-primary mt-2  shadow rounded p-5 ml-3 mr-3 text-white">

        <div class="text-center"><h1>Connexion</h1></div>

        <div class="mb-2">
        <label for="inputEmail" class="mt-3">Email:</label>
        <input type="email" placeholder="Adresse mail" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>

        <div class="mb-2">
        <label for="inputPassword" class="mt-3">Mot de passe:</label>
        <input type="password" placeholder="Mot de passe" name="password" id="inputPassword" class="form-control" required>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >



        <div class="checkbox mb-3 mt-3">
            <label>
                <input type="checkbox" name="_remember_me"> se souvenir de moi
            </label>
        </div>


        <div class="mt-3">
            <button type="submit" class="btn btn-outline-success btn-lg btn-block ">Connexion</button>
            <a class="btn btn-outline-danger btn-lg btn-block mt-3" href="{{ path('home_index') }}" role="button">Annuler</a>
        </div>


    </div>
    </form>
{% endblock %}